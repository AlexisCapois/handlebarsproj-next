<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center display-4">Register</h3>
            <form action="/users/register" method="POST">

                <div class="form-group">
                    <label for="name">Nom</label>
                    <input type="text" name="name" class="form-control" required value=" {{name}}">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" required value=" {{email}}">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="text" name="password" class="form-control" required value=" {{password}}">
                </div>
                <div class="form-group">
                    <label for="password2">ConfirmPasseword</label>
                    <input type="text" name="password2" class="form-control" required value=" {{password2}}">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>